<div class="container-fluid">
    <h1>{{ heading_title }}</h1>

    <form action="{{ save }}" method="post" enctype="multipart/form-data" id="form-chatbot">
        <div class="form-group">
            <label class="control-label" for="input-status">{{ entry_status }}</label>
            <select name="module_chatbot_status" id="input-status" class="form-control">
                <option value="1" {% if module_chatbot_status %}selected="selected"{% endif %}>Enabled</option>
                <option value="0" {% if not module_chatbot_status %}selected="selected"{% endif %}>Disabled</option>
            </select>
        </div>

        <div class="buttons">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="{{ back }}" class="btn btn-default">Back</a>
        </div>
    </form>
</div>
